{
  "name": "serverprinter",
  "version": "1.0.0",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Servidor de impresion termica POS con nodejs/ts patron repositorio",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "frontend:dev": "tsc -w -p tsconfig.frontend.json",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cpx \"src/public/build/**/*\" dist/public/build && cpx \"src/views/**/*\" dist/views",
    "tailstart": "npx tailwindcss -i ./src/public/tailwindcss/tailwind.css -o ./src/public/build/css/tailwindapp.css --watch",
    "start": "node ./dist/app.js"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "cpx": "^1.5.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "module-alias": "^2.2.3",
    "mongoose": "^9.1.3",
    "morgan": "^1.10.1",
    "node-thermal-printer": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.14.1",
    "tailwindcss": "^3.4.19",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "_moduleAliases": {
    "@server": "dist/server",
    "@config": "dist/config",
    "@controllers": "dist/controllers",
    "@services": "dist/services",
    "@repositories": "dist/repositories",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@middlewares": "dist/middlewares"
  }
}
